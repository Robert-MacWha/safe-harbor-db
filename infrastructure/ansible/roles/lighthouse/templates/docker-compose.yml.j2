services:
    lighthouse:
        container_name: lighthouse_service
        image: "ghcr.io/skylock-ai/lighthouse:{{ version }}"
        pull_policy: always
        environment:
            FIREBASE_CREDENTIALS: "{{ firebase_credentials }}"
            CHAIN_CONFIG: "{{ chain_config }}"
            MAILGUN_API_KEY: "{{ mailgun_api_key }}"
        restart: unless-stopped
